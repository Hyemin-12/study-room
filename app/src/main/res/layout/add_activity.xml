<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/background_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cat"
                android:scaleType="centerCrop"
                android:alpha="0.7"/>

            <Button
                android:id="@+id/add_background_image_btn"
                android:text="프로젝트 배경 추가"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FFC7C8"
                android:textColor="@color/black"/>

        </FrameLayout>

        <TextView
            android:text="제목"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/input_title"
            android:hint="제목을 입력해주세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="내용"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/input_content"
            android:hint="내용을 입력해주세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="목표 금액"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/input_amount"
            android:inputType="number"
            android:hint="목표 금액을 입력해주세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="날짜"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
               android:id="@+id/expiration_date"
                android:hint="프로젝트 마감 날짜를 선택해주세요"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/calander_btn"
                android:src="@drawable/calendar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:backgroundTint="#FFC7C8"/>

        </LinearLayout>

        <TextView
            android:text="목표 인원"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="방 공개 여부"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/disclosure_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/public_room"
                android:text="공개"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/private_room"
                android:text="비공개"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <TextView
            android:id="@+id/password_text"
            android:text="비밀번호"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/input_password"
            android:hint="비밀번호를 입력해주세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/create_btn"
            android:text="프로젝트 생성"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFC7C8"
            android:textColor="@color/black"/>
    </LinearLayout>
</ScrollView>